Length = float(input("Give me the lenght of thre sides of the triangle:"))
Width = float(input("Give me the with of the triangle:"))
area_of_rectangle = Length * Width
print("The area of the rectangle is:", area_of_rectangle)
perimeter_of_rectangle = 2 * (Length + Width)
print("The perimeter of the rectangle is:", perimeter_of_rectangle)
pi = 3.14
radius = float(input("Give me the radius of the circle: "))
area_of_circle = pi * (radius) **2
print("The area of the circle is: ", area_of_circle)
circumference_of_circle = 2 * pi * radius
print("The circumference of the circle is:", circumference_of_circle)
