print("X-intercept:", (x_intercept, 0))
x1, y1 =2, 2
x2, y2 =6, 10
slope_task9 = (y2 - y1) / (x2 - x1)
distance = math.sqrt((x2 - x1) ** 2 + (y2 - y1) ** 2)
print("Pendiente:", slope_task9)
print("Distancia entre los puntos:", distance)
print("slope comparison")
if slope_task8 == slope_task9:
    print("The slopes are equal.")
elif slope_task8 * slope_task9 == -1:
    print("The slopes are perpendicular.")
else:
    print("The slopes are different.")
import math
a, b, c = 1, 6, 9
D = b**2 - 4*a*c
if D >= 0:
    root1 = (-b + math.sqrt(D)) / (2*a)
    root2 = (-b - math.sqrt(D)) / (2*a)
    print("The roots are:", root1, root2)
else:
    print("There are no real roots")
